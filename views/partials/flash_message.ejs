<% if(success && success.length ){ %>
    <div class="alert alert-success alert-dismissible fade show text-center mx-4 mt-2" role="alert">
        <strong><%= success %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
<% } %>

<% if(error && error.length ){ %>
    
    <div class="alert alert-danger alert-dismissible fade show text-center  mx-4 mt-2" role="alert">
        <strong><%= error %></strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
<% } %> 