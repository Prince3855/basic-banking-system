
    <!-- navbar -->
    <%- include("partials/navbar.ejs"); %>

    <div class="my-3">
        <h2 class='text-center title'> Transfer Money </h2>
    </div>
    <div class="container container_div">
        <div class="row">
            <div class="col-md-6 col-10 mx-auto">

                <form action="/transfer" method="POST">
                    <div class="form-group mb-4">
                        <label for="sender">Sender's Email OR A/C No.</label>
                        <input type="text" class="form-control" name="sender" value="<%= sender %>" placeholder="Ex. name@example.com or 268446984621684" required />
                    </div>
                    <div class="form-group mb-4">
                        <label for="receiver">Receiver's Email OR A/C No.</label>
                        <input type="text" class="form-control" name="receiver" value="<%= receiver %>" placeholder="Ex. name@example.com or 268446984621684" required />
                    </div>

                    <div class="form-group mb-4">
                        <label for="amount">Amount</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-rupee-sign text-danger"></i></span>
                            </div>
                            <input type="number" class="form-control" name="amount" value="" placeholder="Amount (Rupees)" required>
                        </div>
                    </div>

                    <div class="form-group my-2">
                        <button type="submit" class="btn btn-danger btn-lg btn-block py-0">Proceede</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include("partials/footer.ejs"); %>