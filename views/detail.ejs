
    <!-- navbar -->
    <%- include("partials/navbar.ejs"); %>


    <!-- customer list -->
    <div class="container">
        <div class="row">
            <div class="col-md-6 order-1 d-flex justify-content-center flex-column">
                <img src='/images/profile2.png' class="mx-auto w-75" alt='Profile' />
            </div>
            <div class="col-md-6 order-2 d-flex justify-content-center flex-column">
                <div class="row field">
                    <div class="col-2"><span>A/C No.</span></div>
                    <div class="col-10"><span> <%= customer.accountNo %> </span></div>
                </div>
                <div class="row field">
                    <div class="col-1"><i class="fas fa-user-circle"></i></div>
                    <div class="col-11"><span> <%= customer.name %> </span></div>
                </div>

                <div class="row field">
                    <div class="col-1"><i class="fas fa-envelope"></i></div>
                    <div class="col-11"><span> <%= customer.email %> </span></div>
                </div>
                <div class="row field">
                    <div class="col-1"><i class="fas fa-phone-alt"></i></div>
                    <div class="col-11"><span> <%= customer.mobile %> </span></div>
                </div>
    
                <div class="row field">
                    <div class="col-1"> <i class="fas fa-address-card"></i></div>
                    <div class="col-11"><span> <%= customer.address %> </span></div>
                </div>
    
                <div class="row field">
                    <div class="col-1"><i class="fas fa-rupee-sign"></i></div>
                    <div class="col-11"><span> <%= customer.balance %> </span></div>
                </div>
                <div class="row field mt-4">
                    
                    
                    <div class="col-6">
                        <a href="/customers" type="button" class="btn  btn-outline-primary btn-lg btn-block py-0">Back</a>   
                    </div>
                    <div class="col-6">
                        <a href="/transfer?sender=<%= customer.email %>" type="button" class="btn btn-outline-primary btn-lg btn-block py-0" id='transfer' onclick=sendData>Transfer</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Footer -->
    <%- include("partials/footer.ejs"); %>
